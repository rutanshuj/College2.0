<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.college20.CreateEvent2"
    android:background="@drawable/create1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromDate"
        android:text="From:"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toDate"
        android:text="To:"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_alignBaseline="@+id/fromDate"
        android:layout_alignBottom="@+id/fromDate"
        android:layout_toRightOf="@+id/startDate"
        android:layout_toEndOf="@+id/startDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="From:"
        android:id="@+id/fromTime"
        android:layout_below="@+id/startDate"
        android:layout_alignLeft="@+id/startDate"
        android:layout_alignStart="@+id/startDate"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toTime"
        android:text="To:"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_above="@+id/endTime"
        android:layout_alignRight="@+id/toDate"
        android:layout_alignEnd="@+id/toDate" />

    <TextView
        android:layout_width="150dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/endDate"
        android:hint="Date"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/startDate"
        android:layout_alignLeft="@+id/toDate"
        android:layout_alignStart="@+id/toDate" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/toDateBttn"
        android:layout_below="@+id/toDate"
        android:layout_alignLeft="@+id/toDate"
        android:layout_alignStart="@+id/toDate" />

    <TextView
        android:textColor="@color/black"
        android:layout_width="150dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:id="@+id/startDate"
        android:layout_alignBaseline="@+id/toDateBttn"
        android:layout_alignBottom="@+id/toDateBttn"
        android:layout_alignLeft="@+id/fromDate"
        android:layout_alignStart="@+id/fromDate" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/fromDateBttn"
        android:clickable="true"
        android:layout_alignBaseline="@+id/startDate"
        android:layout_alignBottom="@+id/startDate"
        android:layout_alignLeft="@+id/fromDate"
        android:layout_alignStart="@+id/fromDate" />

    <Button
        android:layout_width="300dp"
        app:backgroundTint="@color/light_orange"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Timing is Imperative "
        android:id="@+id/nextButton1"
        android:layout_marginTop="73dp"
        android:layout_marginLeft="99dp"
        android:layout_below="@+id/startTime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@color/black"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/startTime"
        android:hint="Time"
        android:textSize="20sp"
        android:layout_below="@+id/fromTime"
        android:layout_alignLeft="@+id/fromTime"
        android:layout_alignStart="@+id/fromTime" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/fromTimeBttn"
        android:layout_below="@+id/fromTime"
        android:layout_alignLeft="@+id/startTime"
        android:layout_alignStart="@+id/startTime" />

    <TextView
        android:layout_width="150dp"
        android:textSize="20sp"
        android:layout_height="40dp"
        android:hint="Time"
        android:id="@+id/endTime"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/toTimeBttn"
        android:layout_alignLeft="@+id/toTime"
        android:layout_alignStart="@+id/toTime" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/toTimeBttn"
        android:layout_alignBaseline="@+id/fromTimeBttn"
        android:layout_alignBottom="@+id/fromTimeBttn"
        android:layout_alignLeft="@+id/endTime"
        android:layout_alignStart="@+id/endTime" />

</RelativeLayout>
