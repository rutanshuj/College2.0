<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/create2"
    tools:context="com.example.admin.college20.CreateEvent3">


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Facebook Link"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/facebook_link_eT"
        android:layout_below="@+id/event_loca_eT"
        android:layout_alignLeft="@+id/event_loca_eT"
        android:layout_alignStart="@+id/event_loca_eT" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Website Link"
        android:ems="10"
        android:layout_marginTop="33dp"
        android:id="@+id/web_link_eT"
        android:layout_below="@+id/facebook_link_eT"
        android:layout_alignLeft="@+id/facebook_link_eT"
        android:layout_alignStart="@+id/facebook_link_eT" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Event Location"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/event_loca_eT"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton2"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/web_link_eT"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
